            </StackPanel.Effect>
            <Border x:Name="BorderWin" BorderBrush="#FFCED7F7" Background="#FFCED7F7" Height="500" Width="1000"  BorderThickness="0,0,0,0"  CornerRadius="15,15,15,15"   >
