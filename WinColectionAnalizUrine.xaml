                                <TextBlock x:Name="Dat"  Text=" Дата аналізу" Foreground="#FF4607A0" FontFamily="Microsoft Sans Serif" Margin="10,10,0,0" FontSize="14" Height="24" Width="90" HorizontalAlignment="Left" VerticalAlignment="Center"  />
                                <TextBox Name="DateAnaliz"  Text="{Binding Path=dateAnaliza,UpdateSourceTrigger=PropertyChanged}" Height="30" Width="150" FontSize="14" BorderThickness="0,0,0,0" DataContext="{Binding SelectedPacientAnalizUrine}"
