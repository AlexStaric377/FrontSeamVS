                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="350*" />
                        <ColumnDefinition Width ="630*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="360*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Label Content=" Перелік дат аналізів сечі" Height="30"  FontSize="14" FontFamily="Microsoft Sans Serif" Foreground="#FF4607A0" VerticalAlignment="Center"  HorizontalAlignment="Left" />
                        </Grid>
                        <Grid Grid.Row="1">

                            <Border BorderBrush="#FF979595" BorderThickness="1,1,1,1" Height="380" Width="345" HorizontalAlignment="Center" VerticalAlignment="Top">
                                <ListView x:Name="ColectionAnalizUrineTablGrid" Cursor="Hand" ItemsSource="{Binding  ViewPacientAnalizUrines}"  SelectedItem="{Binding SelectedPacientAnalizUrine}" Background="#FFCED7F7"
                                  Width="345" Height="380" VerticalAlignment="Top" HorizontalAlignment="Center"  ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Hidden"   >
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="LeftMouseUp">
                                            <i:InvokeCommandAction Command="{Binding ElementName=ColectionAnalizUrineTablGrid, Path=DataContext.OnVisibleObjAnalizUrine}" CommandParameter=""/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=dateAnaliza}" Margin="0,0,0,5" VerticalAlignment="Center"  Width="345" Height="20" FontSize="14" FontFamily="Microsoft Sans Serif"  HorizontalAlignment="Left" />
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="Background" Value="#FFCED7F7"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=dateAnaliza}" Value="true">
                                                    <Setter Property="Background" Value="Blue"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                </ListView>
                            </Border>
